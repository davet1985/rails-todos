<h4 class="text-center"><em>Edit List</em></h4>


<div class="new-list">
	<%= form_for(@list, :html => { :class => "form-horizontal"} ) do |f| %>

	  <div class="control-group">
	  	<%= f.label :title, :class => "control-label strong" %>
	    <div class="controls">
	     <%= f.text_field :title %>
	    </div>
	  </div>
	  <div class="control-group">
	  	<%= f.label :description, :class => "control-label strong" %>
	    <div class="controls">
	     <%= f.text_field :description %>
	    </div>
	  </div>
	  <div class="control-group">
	    <div class="controls">
	      <%= f.submit %>
	      <%= link_to 'Cancel', lists_path %>
	    </div>
	  </div>

	<% end %>
</div>
