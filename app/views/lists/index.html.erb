<h4 class="text-center"><em>All Lists</em></h4>

<% @lists.each do |list| %>

  <div class="list">
    <i class="icon-list"></i>
    <strong><%= list.title %></strong>
    <br/>
    <% if not(list.description.empty?) %>
      <small><em><%= list.description %></em></small>
      <br/>
    <% end %>
    <button class="btn btn-link btn-small"><%= link_to 'Show', list %></button>
    <button class="btn btn-link btn-small"><%= link_to 'Edit', edit_list_path(list) %></button>
    <button class="btn btn-link btn-small"><%= link_to 'Delete', list, confirm: 'Are you sure?', method: :delete %></button>
  </div>

<% end %>

<button class="btn btn-large"><i class="icon-plus"></i> <%= link_to 'New List', new_list_path %></button>